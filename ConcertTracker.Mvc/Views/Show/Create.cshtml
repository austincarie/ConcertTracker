@model ConcertTracker.Models.Show.ShowCreate
@{
    ViewData["Title"] = "Show Create";
}

<h1>Create a Show</h1>
<hr>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="BandId" class="form-label"></label>
        <input asp-for="BandId" class="form-control">
    </div>
    <div class="col-md-6">
        <label asp-for="VenueId" class="form-label"></label>
        <input asp-for="VenueId" class="form-control">
    </div>
    <div class="col-md-6">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="col d-flex justify-content-between align-items-baseline">
        <a asp-action="Index" class="">Back to List</a>
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}