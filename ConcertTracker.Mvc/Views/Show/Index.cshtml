@model IEnumerable<ShowListItem>
@{
    ViewData["Title"] = "Shows";
}

<table class="table border border-white text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BandId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BandId
                </td>
                <td>
                    @item.VenueId
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <span>|</span>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Show" asp-action="Create">Add Show</a>