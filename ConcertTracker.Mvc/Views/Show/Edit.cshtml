@model ShowEdit
@{
    ViewData["Title"] = "Edit Show";
}

<h1>Edit Show</h1>
<hr>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" class="row g-3">
    <input asp-for="Id" hidden disabled>
    <div class="col-md-6">
        <label asp-for="BandId" class="form-label"></label>
        @Html.DropDownList("BandId", ViewBag.BandList as SelectList, "Select an item", new { @class = "form-control" })
        <span asp-validation-for="BandId" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="VenueId" class="form-label"></label>
        @Html.DropDownList("VenueId", ViewBag.VenueList as SelectList, "Select an item", new { @class = "form-control" })
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="col d-flex justify-content-between align-items-baseline">
        <a asp-action="Index" class="">Back to List</a>
        <input type="submit" value="Update" class="btn btn-primary">
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}